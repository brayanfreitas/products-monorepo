{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/products-monorepo/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/products-monorepo/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/products-monorepo",
  "projects": {
    "product-a": {
      "type": "application",
      "root": "apps/product-a",
      "entryFile": "main",
      "sourceRoot": "apps/product-a/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product-a/tsconfig.app.json"
      }
    },
    "product-b": {
      "type": "application",
      "root": "apps/product-b",
      "entryFile": "main",
      "sourceRoot": "apps/product-b/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product-b/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}